<%- include('../layouts/header', {titulo:'TODO-list'}) %>
<%- include('../layouts/menu') %>

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-four-fifths">
                <h1 class="title size-4"><%= checklist.nome %></h1>
            </div>
            <div class="column is-one-fifth">
                <a href="/checklist/<%= checklist._id %>/tasks/new" class="button is-samll is-success">Nova Tarefa</a>
                <a href="/checklist" class="button is-samll">voltar</a>
            </div>
        </div>
    </div>

    <hr>

    <% checklist.task.forEach(task =>{ %>
        <div class="columns">
            <div class="column is-four-fifths">
                <input type="checkbox"/> <%= task.nome %>
            </div>
            <div class="column is-one-fifth">
                <a href="/task/<%= task._id %>?_method=delete" class="button is-danger is-samll">Remover</a>
            </div>
        </div>
    <% }) %>
</section>

<%- include('../layouts/footer', {}) %>